<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:background="#0A0909">


    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/welcome"
            android:id="@+id/imgLogin"
    />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/email"
            android:hint="Please enter an email address..."
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textColor="#141414"
            android:id="@+id/activity_main_edtEmail"

            android:background="#EDFFFFFF" android:layout_marginRight="15dp" android:layout_marginLeft="15dp"/>

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:drawableRight="@drawable/password"
              android:hint="Please enter the password"
              android:ems="10"
              android:inputType="textPassword"
              android:textColor="#141414"
              android:layout_marginTop="10dp"
              android:id="@+id/activity_main_edtPassword"
              android:background="#EDFFFFFF" android:layout_marginRight="15dp" android:layout_marginLeft="15dp"/>
    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:background="#FFFF00"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:id="@+id/activity_main_btnLogin"
            android:layout_marginLeft="30dp" android:layout_marginRight="30dp"/>
    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:background="#ff0000"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:id="@+id/activity_main_btnSignup"
            android:layout_marginLeft="30dp" android:layout_marginRight="30dp"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpLayout"
        android:orientation="vertical"
        android:background="#2E2E31"
>


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp" app:srcCompat="@drawable/welcome" android:id="@+id/imageView"
            android:scaleType="fitXY" android:layout_marginRight="20dp" android:layout_marginLeft="20dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/sign_up_layout_edtEmail" android:background="#fff"
            android:hint="Please Enter an email address"
            android:drawableRight="@drawable/email" android:textColor="#0F0F0F"
            android:layout_marginTop="5dp" android:layout_marginRight="20dp" android:layout_marginLeft="20dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:ems="10"
            android:id="@+id/sign_layout_edtUsername" android:background="#fff" android:hint="Please enter a username"
            android:drawableRight="@drawable/username" android:textColor="#0F0F0F"
            android:layout_marginTop="5dp"
            android:inputType="text" android:layout_marginRight="20dp" android:layout_marginLeft="20dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:ems="10"
            android:id="@+id/sign_up_layout_edtPassword" android:background="#fff"
            android:hint="Please Enter Password..."
            android:drawableRight="@drawable/password" android:textColor="#0F0F0F"
            android:layout_marginTop="5dp"
            android:inputType="text|textPassword" android:layout_marginRight="20dp" android:layout_marginLeft="20dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/sign_up_layout_edtConfirmPassword" android:background="#fff"
            android:hint="Please comfirm the password..."
            android:drawableRight="@drawable/confirm" android:textColor="#0F0F0F"
            android:layout_marginTop="5dp" android:layout_marginRight="20dp" android:layout_marginLeft="20dp"/>
    <Button
            android:text="Sign Up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/signup_layout_btnSignUp"
            android:background="#DFCAF0" android:layout_marginTop="10dp" android:textSize="30sp"
            android:layout_marginRight="20dp" android:layout_marginLeft="20dp"/>
    <Button
            android:text="Log in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/signup_layout_btnLogin"
            android:background="#DFCAF0" android:layout_marginTop="10dp" android:textSize="30sp"
            android:layout_marginRight="20dp" android:layout_marginLeft="20dp"/>

</LinearLayout>